@{
    ViewBag.Title = "Home Page";
}

<table border="1" class="table">
    <tr>
        <th>Task Name</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Completed</th>
        <th>Edit</th>
    </tr>
    @foreach(var newtask in ViewBag.newtask)
    {
    <tr>
        <td>@newtask.TaskName</td>
        <td>@newtask.TaskDescription</td>
        <td>@newtask.DueDate</td>
        <td>@newtask.Completed</td>



        <td><a href="/Home/DeleteTask?taskID=@newtask.TaskID" onclick="return confirm('You sure?')">Delete</a></td>

        <td><a href="/Home/TaskDetails?TaskName=@newtask.TaskName">Update</a></td>

     
    </tr>
    }
</table>